<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_item_my_music_layout_root"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    tools:background="#FFFFFF"
    tools:layout_height="60dp"
    >

    <ImageView
        android:id="@+id/fragment_item_my_music_image_view"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@drawable/item_type"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/fragment_item_my_music_image_view"
        android:layout_toEndOf="@+id/fragment_item_my_music_image_view"
        android:layout_centerVertical="true"
        >

        <TextView
            android:id="@+id/fragment_item_my_music_text_view_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:textColor="#000"
            android:textSize="16sp"
            tools:text="Em Dang Nghi Gi - Hoang Ton"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_item_my_music_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:padding="5dp"
        android:layout_marginRight="4dp"
        >
        <TextView
            android:id="@+id/fragment_item_my_music_text_view_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="16sp"
            tools:text="3:50"/>
    </LinearLayout>
</RelativeLayout>