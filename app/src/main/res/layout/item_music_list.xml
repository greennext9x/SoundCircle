<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_layout_root"
    android:layout_width="match_parent"
    android:layout_height="74dp"
    tools:background="#FFFFFF"
    tools:layout_height="84dp"
    >

    <ImageView
        android:id="@+id/item_list_image_view_album"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@drawable/item_type"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_list_image_view_album"
        android:layout_toEndOf="@+id/item_list_image_view_album"
        android:layout_centerVertical="true"
        >

        <TextView
            android:id="@+id/item_list_text_view_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:textColor="#000"
            android:textSize="16sp"
            tools:text="Em Dang Nghi Gi - Hoang Ton"
            />

        <TextView
            android:id="@+id/item_list_text_view_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="14sp"
            tools:text="Hoang Ton"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="64dp"
        android:layout_below="@id/item_list_image_view_album"
        >
        <ImageView
            android:id="@+id/item_list_image_view_like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:padding="4dp"
            android:src="@drawable/ic_like_count"/>
        <TextView
            android:id="@+id/item_list_text_view_like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="14sp"
            tools:text="3050"/>
        <ImageView
            android:id="@+id/item_list_image_view_play_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:padding="4dp"
            android:scaleType="center"
            android:src="@drawable/ic_play_count"/>
        <TextView
            android:id="@+id/item_list_text_view_play_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="14sp"
            tools:text="3050"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        >
        <ImageView
            android:id="@+id/item_list_image_view_add_playlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:src="@drawable/ic_item_add_playlist"/>
    </LinearLayout>
</RelativeLayout>